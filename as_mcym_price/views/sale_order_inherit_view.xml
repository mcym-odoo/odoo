<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Sale Order form view -->
	<record id="view_order_form_inherit_mcym_view" model="ir.ui.view">
		<field name="name">view.order.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form" />
		<field name="priority">55</field>
		<field name="arch" type="xml">

			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree" position="inside">
				<field name="as_margin_porcentaje" optional="hide" />
			</xpath>
			<xpath expr="//field[@name='payment_term_id']" position="after">
				<field name="as_aprobe" invisible="1" />
				<field name="as_password"  password="True" 
					attrs="{'invisible': [('as_aprobe', '!=', True)],'required': [('as_aprobe', '=', True)]}" />
			</xpath>


		</field>
	</record>

</odoo>