<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_product_template_codey_mcym_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='uom_po_id']" position="after">
                    <field name="as_last_price_purchase" />
                    <field name="as_last_price_purchase_condicionado" />
                    <field name="as_profit" />
                    <field name="as_compute" invisible="True"/>

                </xpath>

            </data>
        </field>
    </record>
    <record id="as_cost_iqual_confirm" model="ir.actions.server">
        <field name="name">Igualar Costos</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="binding_model_id" ref="model_product_template"/>
        <field name="state">code</field>
        <field name="code">records._get_product_supplier_price()</field>
    </record>
  
</odoo>