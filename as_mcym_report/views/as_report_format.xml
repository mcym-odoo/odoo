  <report 
        id="report_sale_order" 
        model="sale.order" 
        string="Presupuesto de venta / Pedido de venta"
        report_type="qweb-pdf"
        name="as_mcym_report.report_sale_order"
        file="as_mcym_report.report_sale_order"
        attachment_use="False" 
        menu="True" />

  <report 
        id="report_account_move" 
        model="account.move" 
        string="Factura"
